{
  "name": "neko",
  "version": "0.0.0",
  "description": "neKo-Api is the back-end of neKo, an innovative chat created by two students from France. It has been designed to offer several brand new user-friendly features.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "NODE_ENV=development nodemon -V server.js",
    "test": "xo && mocha",
    "prepush": " npm run lint --silent",
    "lint": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Shenrak/neKo.git"
  },
  "author": "Giom, Veuch",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Shenrak/neKo/issues"
  },
  "homepage": "https://github.com/Shenrak/neKo#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "husky": "^0.13.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0",
    "xo": "^0.17.1"
  },
  "dependencies": {
    "babel-eslint": "^7.1.1",
    "koa": "^2.0.1",
    "koa-bodyparser": "^4.1.0",
    "koa-router": "^7.1.0",
    "koa2-cors": "^2.0.3",
    "thinky": "^2.3.8"
  },
  "xo": {
    "semicolon": false,
    "space": true,
    "parser": "babel-eslint",
    "rules": {
      "no-var": "error",
      "prefer-const": "error",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "only-multiline"
      ]
    }
  }
}
